@page
@model ElasticDatabaseTransactions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.LastName)
        </dd>
    </dl>
    <br />
    <h6>Department Assignments</h6>
    <ul>
        @foreach (var item in Model.DepartmentAssignments)
        {
            <li>@Html.ValueFor(model => item.DepartmentName)</li>
        }
    </ul>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Person.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
